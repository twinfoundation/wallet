{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"description": "Auto-Generated Release Please configuration for minor",
	"pull-request-title-pattern": "chore: minor release prepared",
	"pull-request-header": "chore: minor release prepared",
	"pull-request-footer": "This PR was generated by the prepare-release GHA",
	"release-type": "node",
	"versioning": "always-bump-minor",
	"packages": {
		"packages/wallet-models": {
			"package-name": "wallet-models",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/wallet-connector-entity-storage": {
			"package-name": "wallet-connector-entity-storage",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/wallet-connector-iota": {
			"package-name": "wallet-connector-iota",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/wallet-connector-iota-stardust": {
			"package-name": "wallet-connector-iota-stardust",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"apps/wallet-cli": {
			"package-name": "wallet-cli",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/cli.ts", "tests/cli.spec.ts", "src/index.ts"]
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"wallet-models",
				"wallet-connector-entity-storage",
				"wallet-connector-iota",
				"wallet-connector-iota-stardust",
				"wallet-cli"
			]
		}
	]
}
